# direnv configuration for Python projects
# Copy to .envrc in your project root, then run: direnv allow

# Python version (via pyenv)
# Uncomment and set your project's Python version:
# use pyenv 3.13

# Encoding
export PYTHONIOENCODING=UTF-8

# Docker (lima)
export DOCKER_HOST="unix://$HOME/.lima/docker/sock/docker.sock"

# GitHub token (auto-refreshed from gh CLI)
export GH_TOKEN=$(gh auth token)
